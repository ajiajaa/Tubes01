<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="85dp"
        android:text="Nama Dokter"
        android:id="@+id/tv_nama"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=": "
        android:id="@+id/tv_titik2"
        android:layout_toRightOf="@id/tv_nama"></TextView>
    <TextView
        android:id="@+id/tv_dokter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_titik2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="85dp"
        android:text="Spesialisasi"
        android:id="@+id/tv_spesialis"
        android:layout_below="@id/tv_nama"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=": "
        android:id="@+id/tv_titik21"
        android:layout_toRightOf="@id/tv_spesialis"
        android:layout_below="@id/tv_nama"></TextView>
    <TextView
        android:id="@+id/tv_spesialisasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_titik21"
        android:layout_below="@id/tv_nama"/>

</RelativeLayout>